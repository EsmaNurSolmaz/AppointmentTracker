<Page x:Class="RandevuYonetimSistemi.Views.Auth.LoginView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:RandevuYonetimSistemi.ViewModels.AuthVM"
      mc:Ignorable="d"
      Title="Login">

    <Page.DataContext>
        <vm:LoginViewModel />
    </Page.DataContext>

    <Grid Background="#F3F4F6">

        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
              MinWidth="450"
              MaxWidth="900">

            <Border Background="White"
                    CornerRadius="15"
                    Padding="70"
                    Width="500">

                <StackPanel>

                    <TextBlock Text="Sign In"
                               FontSize="30"
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <TextBlock Text="Email" FontWeight="Bold"/>
                    <TextBox Height="40"
                             FontSize="16"
                             Padding="6"
                             Margin="0,5,0,15"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Password"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <PasswordBox x:Name="PasswordBox"
                                 Height="40"
                                 FontSize="16"
                                 Padding="6"
                                 Margin="0,5,0,20"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                    <Button Content="Login"
                        Height="44"
                        FontSize="16"
                        Margin="0,25,0,0"
                        Background="#2E86DE"
                        Foreground="White"
                        FontWeight="Bold"
                        Command="{Binding LoginCommand}"
                        IsDefault="True"/>


                    <TextBlock Text="Forgot password?"
                               Foreground="#2E86DE"
                               Cursor="Hand"
                               Margin="0,15,0,0"
                               TextAlignment="Center"
                               MouseDown="ForgotPassword_Click"/>

                    <TextBlock Text="{Binding Message}"
                               Foreground="{Binding MessageColor}"
                               TextAlignment="Center"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,18,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
