<Page x:Class="RandevuYonetimSistemi.Views.Pages.AddAppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F3F4F6"
      Loaded="Page_Loaded">

    <Grid>
        <Border Background="White"
                CornerRadius="15"
                Padding="40"
                Width="650"
                MaxWidth="650"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="←"
                            Width="40"
                            Height="40"
                            Click="BackButton_Click"/>

                    <TextBlock Grid.Column="1"
                               Text="Add a new appointment"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <Border Grid.Column="2" Width="40"/>
                </Grid>

                <StackPanel Grid.Row="1"
                            Width="500"
                            HorizontalAlignment="Center">

                    <TextBlock x:Name="WarningText"
                               Text="You can create appointments only for saved customers."
                               Foreground="DarkOrange"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Visibility="Collapsed"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Customer"/>
                    <ComboBox ItemsSource="{Binding Customers}"
                              SelectedValuePath="CustomerId"
                              SelectedValue="{Binding SelectedCustomerId}"
                              DisplayMemberPath="FullName"
                              Height="35"
                              Margin="0,5,0,15"/>

                    <TextBlock Text="Service"/>
                    <TextBox Text="{Binding Service, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"
                             Margin="0,5,0,15"/>

                    <TextBlock Text="Date"/>
                    <DatePicker SelectedDate="{Binding Appointment.AppointmentDate}"
                                Height="35"
                                Margin="0,5,0,15"/>

                    <TextBlock Text="Hour"/>
                    <ComboBox SelectedValue="{Binding SelectedTime}"
                              SelectedValuePath="Content"
                              Height="35"
                              Margin="0,5,0,20">
                        <ComboBoxItem Content="08:00"/>
                        <ComboBoxItem Content="09:00"/>
                        <ComboBoxItem Content="10:00"/>
                        <ComboBoxItem Content="11:00"/>
                        <ComboBoxItem Content="12:00"/>
                        <ComboBoxItem Content="13:00"/>
                        <ComboBoxItem Content="14:00"/>
                        <ComboBoxItem Content="15:00"/>
                        <ComboBoxItem Content="16:00"/>
                        <ComboBoxItem Content="17:00"/>
                        <ComboBoxItem Content="18:00"/>
                        <ComboBoxItem Content="19:00"/>
                    </ComboBox>

                    <Button Content="Save appointment"
                            Height="40"
                            Width="200"
                            FontWeight="Bold"
                            Background="#32CD32"
                            Foreground="White"
                            Command="{Binding AddAppointmentCommand}"/>
                </StackPanel>

                <TextBlock Grid.Row="2"
                           Text="Please review the appointment details and save."
                           HorizontalAlignment="Center"
                           Foreground="Gray"
                           Margin="0,25,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Page>
