<Page x:Class="RandevuYonetimSistemi.Views.Pages.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#F3F4F6">

        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                MaxWidth="800"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" Width="650" Margin="-86,0,0,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Welcome"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <TextBlock Grid.Row="1"
                           Text="Which industry will you use the application in?"
                           FontSize="18"
                           Margin="0,0,0,20"/>

                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            Margin="0,0,0,20">

                    <StackPanel x:Name="SectorsPanel">
                        <TextBox Width="300"
                                 Height="36"
                                 Foreground="Gray"
                                 Text="Healthcare, beauty services etc."
                                 GotFocus="SectorTextBox_GotFocus"
                                 LostFocus="SectorTextBox_LostFocus"/>
                    </StackPanel>

                    <Button Width="36"
                            Height="36"
                            Margin="10,0,0,0"
                            Content="+"
                            Click="AddButton_Click"/>
                </StackPanel>

                <Button Grid.Row="3"
                        x:Name="NextButton"
                        Content="Next"
                        Width="103"
                        HorizontalAlignment="Right" Margin="0,18,0,0" Foreground="#FF2F2B2B" FontWeight="Bold"/>
            </Grid>

        </Border>
    </Grid>
</Page>
