<Page x:Class="RandevuYonetimSistemi.Views.Pages.Offerings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#F3F4F6">

        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                MaxWidth="650"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" Width="650" Height="240">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Enter Your Services"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="43.357"/>
                        <ColumnDefinition Width="1.643"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel x:Name="ServicesPanel">
                        <TextBox x:Name="FirstServiceTextBox"
                     Height="28"
                     FontSize="14"
                     Foreground="Gray"
                     Text="Enter service name"
                     GotFocus="ServiceTextBox_GotFocus"
                     LostFocus="ServiceTextBox_LostFocus"/>


                    </StackPanel>

                    <Button x:Name="AddServiceButton"
                            Grid.Column="1"
                            Content="+"
                            Width="35"
                            FontSize="18"
                            Margin="17,0,-7,52"
                            Click="AddServiceButton_Click" Grid.ColumnSpan="2"/>
                </Grid>

                <Button x:Name="NextButton"
                        Grid.Row="2"
                        Content="Next"
                        Width="72"
                        HorizontalAlignment="Right"
                        Margin="0,36,-10,-13" Click="NextButton_Click" Foreground="#FF383333" FontWeight="Bold"/>
            </Grid>

        </Border>
    </Grid>
</Page>
