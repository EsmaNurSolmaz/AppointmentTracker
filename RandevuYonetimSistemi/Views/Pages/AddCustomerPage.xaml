<Page x:Class="RandevuYonetimSistemi.Views.Pages.AddCustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F3F4F6">

    <Grid>

        <Border Background="#FF434348"
                CornerRadius="15"
                Padding="30"
                MaxWidth="650"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" Width="500" Height="450">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="0,0,0,25">

                    <Button Content="←"
                            Width="40"
                            Height="40"
                            Margin="0,0,10,0"
                            Background="#3C3C3C"
                            Foreground="White"
                            BorderThickness="0"
                            Click="BackButton_Click" FontSize="16" FontWeight="Bold"/>

                    <TextBlock Text="New Customer"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="1">

                    <TextBlock Text="Full Name" Foreground="#FFFAFAFA" FontSize="14"/>
                    <TextBox x:Name="FullNameBox"
                             Height="38"
                             Margin="0,5,0,15"
                             Background="#7F555555"
                             Foreground="White"/>

                    <TextBlock Text="Phone" Foreground="#FFFAFAFA" FontSize="14"/>
                    <TextBox x:Name="PhoneBox"
                             Height="38"
                             Margin="0,5,0,15"
                             Background="#7F555555"
                             Foreground="White"/>

                    <TextBlock Text="Email" Foreground="#FFFAFAFA" FontSize="14"/>
                    <TextBox x:Name="EmailBox"
                             Height="38"
                             Margin="0,5,0,20"
                             Background="#7F555555"
                             Foreground="White"/>

                    <Button Content="Save"
                            Height="42"
                            Background="#007ACC"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="SaveCustomer_Click"/>

                    <TextBlock x:Name="FeedbackText"
                               Margin="0,15,0,0"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Page>
