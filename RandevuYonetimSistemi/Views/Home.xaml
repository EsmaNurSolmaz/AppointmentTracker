<Page x:Class="RandevuYonetimSistemi.Views.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home">

    <Grid Background="#F2F4F7">

        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
              MaxWidth="800"
              Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Appointment Management System"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="#2D2D2D"
                       TextAlignment="Center"/>

            <Border Grid.Row="1"
                    Margin="0,40,0,0"
                    Background="White"
                    CornerRadius="16"
                    Padding="40">

                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">

                    <TextBlock Text="Manage your appointments easily"
                               FontSize="20"
                               Foreground="Gray"
                               TextAlignment="Center"
                               Margin="0,0,0,40" FontWeight="Bold"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                        <Button Content="Login"
                                MinWidth="140"
                                MinHeight="40"
                                Margin="0,0,20,0"
                                Background="#0078D7"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Click="LoginButton_Click"/>

                        <Button Content="Register"
                                MinWidth="140"
                                MinHeight="40"
                                Background="#E0E0E0"
                                Foreground="#333"
                                FontSize="14"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Click="RegisterButton_Click" Width="136" Height="19"/>
                    </StackPanel>

                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Page>
