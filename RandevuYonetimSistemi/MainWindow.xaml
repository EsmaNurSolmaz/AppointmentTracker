<Window x:Class="RandevuYonetimSistemi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Randevu Yonetim Sistemi"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F2F4F7">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
        Background="White"
        BorderBrush="#E0E0E0"
        BorderThickness="0,0,0,1">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock VerticalAlignment="Center"
                   FontSize="14"
                   FontWeight="Bold">
            <Run Text="Appointment "/>
            <Run Language="tr-tr" Text="Management"/>
                </TextBlock>

                <Button x:Name="HomeButton"
                Grid.Column="1"
                Content="Home"
                Margin="0,0,10,0"
                Padding="14,6"
                Background="#0078D7"
                Foreground="White"
                BorderThickness="0"
                FontSize="11"
                Click="HomeButton_Click"/>

                <Button x:Name="LogoutButton"
                Grid.Column="2"
                Content="⎋ Logout"
                Padding="14,6"
                Background="#E74C3C"
                Foreground="White"
                BorderThickness="0"
                FontSize="11"
                Visibility="Collapsed"
                Click="LogoutButton_Click"/>
            </Grid>
        </Border>


        <Frame x:Name="MainFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Margin="20"/>
    </Grid>
</Window>
